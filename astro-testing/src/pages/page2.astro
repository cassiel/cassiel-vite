---
import { getCollection /*, getEntry*/ } from 'astro:content'
const posts = await getCollection('blog')

interface Post {
    data: { title: string },
    id: string
}
---

<h1>TEST</h1>
<ul>
    {posts.map((post: Post) => <li><a href={ `/post-${post.id}` }>{post.data.title}</a>
        (id=<code>{post.id}</code>)</li>)}
</ul>
